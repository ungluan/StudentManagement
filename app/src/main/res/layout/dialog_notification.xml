<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            style="@style/CustomTextStyleH1"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thông báo" />

        <TextView
            style="@style/CustomTextStyleH2"
            android:id="@+id/txt_content_noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bạn có chắc muốn xóa không?" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
                <Button
                    android:layout_marginEnd="40dp"
                    style="@style/CustomButton"
                    android:id="@+id/btn_cancel_noti"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_green"
                    android:text="Không" />

                <Button
                    style="@style/CustomButton"
                    android:id="@+id/btn_accept_noti"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_yellow"
                    android:text="Có" />

        </LinearLayout>
    </LinearLayout>
</layout>