            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Tên GVCN"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="true"
            app:startIconCheckable="true">
