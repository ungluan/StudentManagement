        </com.google.android.material.textfield.TextInputLayout>-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/drop_down_teacher"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"                    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:hintEnabled="true"
            app:endIconTint="@color/secondary_orange"
            app:boxStrokeColor="@color/secondary_orange"
            app:boxStrokeWidth="1dp">

            <AutoCompleteTextView
                android:id="@+id/edit_text_teacher_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_grade_school"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Khối"
            app:boxStrokeWidth="1dp"
            app:hintEnabled="true"
            app:startIconCheckable="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_grade_school"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Hủy"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Thêm"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</layout>